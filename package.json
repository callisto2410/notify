{
  "name": "@ordinateio/notify",
  "version": "2.0.3",
  "description": "The implementation of simple notifications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "files": [
    "dist/**/*"
  ],
  "author": "Ordinate IO (https://github.com/ordinateio)",
  "license": "MIT",
  "homepage": "https://github.com/ordinateio/notify",
  "bugs": {
    "url": "https://github.com/ordinateio/notify/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ordinateio/notify.git"
  },
  "keywords": [
    "front-end",
    "ui",
    "typescript"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:dist && npm run build:dev",
    "build:dist": "tsc --project tsconfig.json && sass --no-source-map src/index.scss dist/index.css && npm run copy:assets",
    "build:dev": "webpack --config demo/webpack.dev.js",
    "build:dev:watch": "webpack --watch --config demo/webpack.dev.js",
    "build:dev:serve": "live-server ./demo",
    "copy:assets": "npx copyfiles -u 1 src/assets/** dist",
    "clean": "rimraf .cache dist demo/dist",
    "npm:pack": "npm run build && npm pack",
    "npm:publish": "npm run build && npm publish --access public",
    "npm:install:lock:only": "npm install --package-lock-only"
  },
  "devDependencies": {
    "@types/node": "^15",
    "animate.css": "^4",
    "autoprefixer": "^10",
    "copyfiles": "^2",
    "css-loader": "^5",
    "cssnano": "^5",
    "live-server": "^1",
    "postcss-loader": "^6",
    "rimraf": "^3",
    "sass": "^1",
    "sass-loader": "^12",
    "style-loader": "^2",
    "ts-loader": "^9",
    "typescript": "^4",
    "webpack": "^5",
    "webpack-cli": "^4",
    "webpack-merge": "^5"
  }
}
